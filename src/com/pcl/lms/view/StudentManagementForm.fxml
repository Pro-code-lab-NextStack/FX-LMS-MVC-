            <TableColumn fx:id="colAddress" prefWidth="160.0" text="Address" />
            <TableColumn fx:id="colDob" prefWidth="136.0" text="DOB" />
            <TableColumn fx:id="colOption" prefWidth="131.0" text="Option" />
        </columns>
      </TableView>
   </children>
