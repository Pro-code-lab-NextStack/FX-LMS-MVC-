      </Label>
      <Separator layoutY="52.0" prefHeight="3.0" prefWidth="600.0" style="-fx-background-color: red;" />
      <TextField fx:id="txtStudentId" editable="false" layoutX="23.0" layoutY="69.0" promptText="Sudent Id" />
      <TextField fx:id="txtStudentName" layoutX="197.0" layoutY="69.0" promptText="Sudent Name" />
      <TextField fx:id="txtAddress" layoutX="378.0" layoutY="69.0" prefHeight="25.0" prefWidth="180.0" promptText="Adress" />
